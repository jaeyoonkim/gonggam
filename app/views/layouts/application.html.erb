<!DOCTYPE html>
<html>
<head>
  <title>Gongam</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>



<div class="navbar navbar-fixed-top">

	<div class="navbar-inner">
		<div class="container">
			<div class="brand">Gonggam</div>
		
			<% if signed_in? %>
			<ul class="nav pull-right">
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">
						<%=current_user%>
						<b class="caret"></b>
					</a>

						
					
					<ul class="dropdown-menu">
						<li><a href="/logout">Logout</a></li>
					</ul>
				</li>
			</ul>
			<% end %>			
		</div>

	</div>
</div>

<br><br><br>
<div class="container">
	<div class="row">
		<div class="span12">
			<%= yield %>
		</div>
	</div>
</div>


</body>
</html>
